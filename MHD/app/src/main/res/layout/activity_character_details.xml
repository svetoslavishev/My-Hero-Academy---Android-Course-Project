<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CharacterDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="All Might"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="173dp"
            android:layout_height="460dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="-44dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/listdata"
            android:text="Toshinori Yagi, most commonly known by his hero name, All Might, is the tritagonist of My Hero Academia. All Might is the former No. 1 Hero who bore the title of the world's Symbol of Peace. He teaches Foundational Hero Studies at U.A. High School."
            android:textColor="#000"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="460dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:src="@drawable/all_might" />

    </RelativeLayout>

</RelativeLayout>